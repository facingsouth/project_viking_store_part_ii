<h1 class="page-header text-center"> Products </h1>

<div class="category col-md-12">
<%= link_to 'New product' , new_product_path, class: 'btn btn-lg btn-success center-block' %>
<br>
<table class="table table-bordered">
<tr>
	<th>ID</th>
	<th>Name</th>
	<th>Price</th>
	<th>Category</th>
	<th>Show</th>
	<th>Edit</th>
	<th>Delete</th>
<tr>
<% @products.each do |product| %>

	<tr>
	<td><%= product.id %></td>
    <td><%= product.name %></td>
    <td><%= number_to_currency(product.price) %></td>
    <% if product.category %>
    <td><%= link_to product.category.name, category_path(product.category) %></td>
    <% else %>
    <td> N/A </td>
    <% end %>
    <td><%= link_to "Show", product, class: "btn btn-xs btn-primary"%></td>
    <td><%= link_to "Edit", edit_product_path(product) ,class: 'btn btn-xs btn-primary'%></td>
	<td><%= link_to "Delete", product_path(product), method: 'delete', :data => {confirm: 'Are you sure you want to delete?'} ,class: 'btn btn-xs btn-danger' %></td>
	</tr>

<% end %>

</table>
</div>

