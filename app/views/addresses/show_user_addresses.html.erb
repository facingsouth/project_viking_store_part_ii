    <th>Created</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Delete</th>
  <tr>
  <% @user.addresses.each do |address| %>

    <tr>
      <td><%= address.id %></td>
      <td><%= link_to "#{address.user.first_name} #{address.user.last_name}", user_path(address.user) %></td>
